extends ../layout/index

block content
  div(class="bg-gray-100 min-h-screen items-center justify-center py-12 px-4 sm:px-6 lg:px-8")
    div(class="max-w-4xl mx-auto flex flex-col")
      h1.text-4xl.text-black.font-bold.mb-8.text-center #{pagina}
    div(class="flex")
      div(class="w-full h-96 bg-white rounded-lg shadow overflow-hidden divide-gray-200 sm:divide-y")
      div(class="bg-white rounded-lg shadow overflow-hidden divide-y divide-gray-200 mb-8 sm:divide-y w-1/3")
        div(class="px-4 py-4 sm:px-6")
          p(class="text-center font-extrabold") Viaje de Ida
          div(class="flex items-center space-x-4")
            img(src='/public/img/logo2.png' class="w-20 h-20 mr-4")
            div(class="flex flex-col")
              span.font-bold Origen:
              span= viaje.origen
              span.font-bold Destino:
              span= viaje.destino

          div(class="flex flex-col mt-4")
            span.font-bold Hora de Salida:
            span= viaje.horarios[0].horario_salida 
            span.font-bold Hora de Llegada:
            span= viaje.horarios[0].horario_llegada 
          div(class="w-ful bg-azul-rey h-1")
        p(class="text-lg h-20 bg-slate-500 font-semibold text-white text-center ")
          | Total: $#{typeof parseFloat(viaje.precio) === 'number' ? parseFloat(viaje.precio).toFixed(2) : 'Precio no v√°lido'} MX 
          br
          snap(class="bg-slate-500 text-start font-normal text-white ")
            | Precios incluyen IVA

  

