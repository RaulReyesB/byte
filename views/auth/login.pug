extends ../layout/index

block content
  div.py-10
    h1.text-center.text-4xl.my-10.font-extrabold.text-azul-rey Byte
      span.font-normal.text-lion  Buss
    if errors
      div(class="max-w-md mx-auto my-10")
        each error in errors
          p(class="bg-red-600 rounded-md text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg      
    h2.text-center.text-3xl.font-extrabold.text-raisin-black #{pagina}
    .mt-8.mx-auto.max-w-md
      .bg-azul-rey.py-8.px-4.shadow-xl.rounded-xl
        form.space-y-5
          div 
            label.block.text-sm.uppercase.text-white.mb-3.font-bold(for="email") Email:
            input#email.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white-50.bg-white(placeholder="user@domain.com" name="email" type="email")
          div 
            label.block.text-sm.uppercase.text-white.mb-3.font-bold(for="password") Password:
            input#password.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white.bg-white(placeholder="*****" name="password" type="password")
          
          div.flex.items-center.justify-between
            a.text-xs.text-white(href="/user/register" class="hover:underline decoration-4 decoration-azul-chicle") New User? , Create an account
            a.text-xs.text-white(href="/user/forgot-password" class="hover:underline decoration-4 decoration-azul-chicle") Forgot your password? Recover it
          div
            input#button_register.w-full.bg-golden-brown(class="text-white font-bold py-3 rounded-xl bg-azul-fuerte hover:bg-azul-chicle cursor-pointer", type="submit", value="Login")
