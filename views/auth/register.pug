extends ../layout/index

block content
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-azul-rey Byte
            span.font-normal.text-lion  Buss
        h2.text-center.text-3xl.font-extrabold.text-raisin-black #{pagina}
            if errors
                div(class="max-w-md mx-auto my-10")
                    each error in errors
                        p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold error-message")
                            span(class="mr-2") ¡Error!
                            = error.msg
        script.
            setTimeout(function() {
                const errorMessages = document.querySelectorAll(".error-message");
                errorMessages.forEach(function(errorMessage) {
                    errorMessage.style.display = "none";
                });
            }, 10000); // Ocultar los mensajes de error después de 5 segundos

        .mt-8.mx-auto.max-w-2xl
            .bg-azul-rey.py-8.px-4.shadow-xl.rounded-xl
                form.space-y-5(action="/user/register" method="POST" novalidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-white.mb-3.font-bold Nombre 
                        input#name.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white-50.bg-white(placeholder="Nombre" name="name" value=user ? user.name : '' required)

                    div(class="md:flex md:gap-4")
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-white.mb-3.font-bold Apellido paterno  
                            input#apat.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white-50.bg-white(placeholder="Apellido paterno" name="apat" value=user ? user.apellidoPaterno : '' required)

                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-white.mb-3.font-bold Apellido materno
                            input#amat.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white-50.bg-white(placeholder="Apellido materno" name="amat" value=user ? user.apellidoMaterno : '' required)
                    
                    div
                        label.block.text-sm.uppercase.text-white.mb-3.font-bold Email:
                        input#email.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white.bg-white(placeholder="user@domain.com" name="email" value=user ? user.email : '' required)

                    div 
                        label.block.text-sm.uppercase.text-white.mb-3.font-bold(for="password") Password:
                        input#password.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white.bg-white(placeholder="Enter your password" name="password" type="password" required)

                    div 
                        label.block.text-sm.uppercase.text-white.mb-3.font-bold Confirm Password:
                        input#cpassword.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white.bg-white(placeholder="Renter your password" name="cpassword" type="password" required)

                    div(class="md:flex md:gap-4")
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-white.mb-3.font-bold Fecha de Nacimiento
                            input#birthdate.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white-50.bg-white(name="birthdate" type="date" required)

                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-white.mb-3.font-bold Genero
                            Select#gen.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white-50.bg-white(name="gen")
                                option(value="" selected disabled) -- SELECCIONA TU GENERO --
                                option(value="1") Hombre
                                option(value="2") Mujer
                                option(value="3") Otro   

                    div(class="md:flex md:gap-4")
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-white.mb-3.font-bold Codigo Postal
                            input#cp.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white-50.bg-white(placeholder="Introduce tu Codigo Postal" name="cp" required)

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-white.mb-3.font-bold Direccion
                            input#dir.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white-50.bg-white(placeholder="Introduce tu Direccion" name="dir" required)
                        
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-white.mb-3.font-bold Numero de Telefono
                            input#tel.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white-50.bg-white(placeholder="###-###-####" name="tel" required)
                    // Enlace para iniciar sesión con Google
                    a(href="/google" class="text-white font-bold py-3 rounded-xl bg-azul-fuerte hover:bg-azul-chicle cursor-pointer")
                        | Iniciar sesión con Google
                    div.flex.items-center.justify-between
                        a.text-xs.text-white(href="/user/login" class="hover:underline decoration-4 decoration-azul-chicle") If you have an account, please Login 
                        a.text-xs.text-white(href="/user/forgot-password" class="hover:underline decoration-4 decoration-azul-chicle") Forgot your password? Recover it

                    div
                        input#button_register.w-full.bg-golden-brown(class="text-white font-bold py-3 rounded-xl bg-azul-fuerte hover:bg-azul-chicle cursor-pointer" type="submit" value="Create Account")
