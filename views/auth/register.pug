extends ../layout/index

block content
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-azul-rey Byte
            span.font-normal.text-lion  Buss
        h2.text-center.text-3xl.font-extrabold.text-raisin-black #{pagina}
            if errors
                div(class="max-w-md mx-auto my-10")
                    each error in errors
                        p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold error-message")
                            span(class="mr-2") ¡Error!
                            = error.msg
        script.
            setTimeout(function() {
                const errorMessages = document.querySelectorAll(".error-message");
                errorMessages.forEach(function(errorMessage) {
                    errorMessage.style.display = "none";
                });
            }, 5000); // Ocultar los mensajes de error después de 5 segundos

        .mt-8.mx-auto.max-w-md
            .bg-azul-rey.py-8.px-4.shadow-xl.rounded-xl
                form.space-y-5(action="/login/register" method="POST" novalidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-white.mb-3.font-bold Name 
                        input#name.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white-50.bg-white(placeholder="Username" name="name" value=user ? user.name : '' required)

                    div
                        label.block.text-sm.uppercase.text-white.mb-3.font-bold Email:
                        input#email.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white.bg-white(placeholder="user@domain.com" name="email" value=user ? user.email : '' required)

                    div 
                        label.block.text-sm.uppercase.text-white.mb-3.font-bold(for="password") Password:
                        input#password.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white.bg-white(placeholder="Enter your password" name="password" type="password" required)

                    div 
                        label.block.text-sm.uppercase.text-white.mb-3.font-bold Confirm Password:
                        input#cpassword.w-full.px-3.py-2.border.border.golden-brown.rounded-sm.place-holder-white.bg-white(placeholder="Renter your password" name="cpassword" type="password" required)

                    div.flex.items-center.justify-between
                        a.text-xs.text-white(href="/login" class="hover:underline decoration-4 decoration-azul-chicle") If you have an account, please Login 
                        a.text-xs.text-white(href="/login/recovery" class="hover:underline decoration-4 decoration-azul-chicle") Forgot your password? Recover it

                    div
                        input#button_register.w-full.bg-golden-brown(class="text-white font-bold py-3 rounded-xl bg-azul-fuerte hover:bg-azul-chicle cursor-pointer" type="submit" value="Create Account")
